services:
  mssql:
    image: mcr.microsoft.com/mssql/server:2022-latest
    container_name: mssql
    restart: unless-stopped
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: "Developer"
      MSSQL_SA_PASSWORD: "{{ mssql_sa_password }}"
    ports:
      - "{{ mssql_port }}:1433"
    volumes:
      - mssql_data:/var/opt/mssql
    healthcheck:
      test: ["CMD-SHELL", "/opt/mssql-tools18/bin/sqlcmd -S localhost -U sa -P '{{ mssql_sa_password }}' -Q 'SELECT 1' -C >/dev/null || exit 1"]
      interval: 20s
      timeout: 10s
      retries: 10
      start_period: 30s

volumes:
  mssql_data:
